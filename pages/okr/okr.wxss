.container{
  padding: 25rpx;
}
.add{
  width: 100%;
  height: 80rpx;
  background-color: #333;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
.kr-item{
  width: 97%;
  height: 120rpx;
  margin: 20rpx auto;
  border-radius: 8rpx;
  background: linear-gradient(to bottom right,rgba(30, 143, 255),rgb(208, 230, 252));
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.kr-title{
  font-size: 32rpx;
  color: #111;
}
.kr-time{
  font-size: 20rpx;
  color: #555;
  text-indent: 15rpx;
}
.icon{
  position: absolute;
  top: -25rpx;
  right: -15rpx;
  width: 130rpx;
  height: 130rpx;
  font-size: 36rpx;
  color: #666;
  text-align: center;
  line-height: 130rpx;
  border-radius: 50%;
  border: 5rpx solid #666;
  transform: rotate(-45deg)
}
.tips{
  font-size: 30rpx;
  color: #777;
  text-align: center;
  margin-top: 400rpx;
}
